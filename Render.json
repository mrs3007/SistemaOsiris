{
  "services": [
    {
      "type": "web",
      "name": "sistema-osiris",
      "env": "node",
      "plan": "starter",
      "buildCommand": "npm install --legacy-peer-deps && npx vite build",
      "startCommand": "npm run start",
      "envVars": [
        { "key": "NODE_ENV", "value": "production" },
        { "key": "PORT", "value": "5000" }
      ]
    },
    {
      "type": "web",
      "name": "sistema-osiris-ci",
      "env": "node",
      "plan": "starter",
      "buildCommand": "npm install --legacy-peer-deps && npx vite build:ci",
      "startCommand": "npm run start",
      "envVars": [
        { "key": "NODE_ENV", "value": "production" },
        { "key": "CI", "value": "true" },
        { "key": "PORT", "value": "5000" }
      ]
    }
  ]
}
